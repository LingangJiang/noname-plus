<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/tv_asset_path"
        style="@style/asset_fragment_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_asset_version"
        style="@style/asset_fragment_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_asset_space"
        style="@style/asset_fragment_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资源大小：加载中..." />

    <TextView
        android:id="@+id/tv_new_version"
        android:clickable="true"
        style="@style/asset_fragment_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true" />

    <TextView
        android:id="@+id/tv_new_version_coding"
        android:clickable="true"
        style="@style/asset_fragment_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true" />

</LinearLayout>