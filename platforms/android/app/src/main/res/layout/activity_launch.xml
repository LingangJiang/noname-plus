<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LaunchActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/wave_view_size"
        android:orientation="vertical"
        tools:ignore="HardcodedText">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startGame"
            android:text="开始游戏" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onVersionControlClick"
            android:text="版本管理" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onExtControlClick"
            android:text="扩展管理" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAboutClick"
            android:text="关于" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="testJavaBridge"
            android:text="测试" />

    </LinearLayout>

    <com.widget.noname.cola.WaveLoadingView
        android:id="@+id/wave_loading_view"
        android:layout_width="@dimen/wave_view_size"
        android:layout_height="@dimen/wave_view_size"
        android:visibility="gone" />

    <WebView
        android:id="@+id/web_view"
        android:layout_width="1px"
        android:layout_height="1px" />

</RelativeLayout>